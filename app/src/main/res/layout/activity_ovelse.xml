<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="186dp"
        app:srcCompat="@drawable/grafbb"
        android:id="@+id/imageView" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ExerciseName" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.08">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="94dp"
            android:id="@+id/listview"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="18dp" />

        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/repsPicker"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/weightPicker"
            android:layout_toRightOf="@+id/viderebutton"
            android:layout_toEndOf="@+id/viderebutton" />

        <NumberPicker
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:id="@+id/repsPicker"
            android:layout_marginTop="56dp"
            android:layout_below="@+id/listview"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/viderebutton"
            android:layout_toStartOf="@+id/viderebutton" />

        <Button
            android:text="Videre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/viderebutton"
            android:layout_alignBaseline="@+id/repsPicker"
            android:layout_alignBottom="@+id/repsPicker"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textReps"
            android:layout_alignLeft="@+id/weightPicker"
            android:layout_alignStart="@+id/weightPicker"
            android:id="@+id/textWeights" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="33dp"
            android:id="@+id/textReps"
            android:layout_below="@+id/listview"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</LinearLayout>